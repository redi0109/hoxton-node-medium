// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  userName String
  photo    String
  posts    Post[]
}

model Post {
  id       Int       @id @default(autoincrement())
  image    String
  content  String
  user     User?     @relation(fields: [userId], references: [id])
  userId   Int?
  likes    Like[]
  comments Comment[]
}

model Like {
  id     Int    @id @default(autoincrement())
  postId Int?
  posts  Post[]
}

model Comment {
  id      Int    @id @default(autoincrement())
  content String
  postId  Int?
  posts   Post[]
}
